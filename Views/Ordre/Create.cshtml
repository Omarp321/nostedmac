@model Nøsted.Models.Ordre

@{
    ViewData["Title"] = "Create";
}

<h2>Ny ordre</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="OrdreStatus" class="control-label"></label>
                <select asp-for="OrdreStatus" class="form-control">
                    <option value="Avsluttet">Avsluttet</option>
                    <option value="Pågående">Pågående</option>
                    <option value="Klargjøres">Klargjøres</option>
                </select>
                <span asp-validation-for="OrdreStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdreInformasjon" class="control-label"></label>
                <input asp-for="OrdreInformasjon" class="form-control" />
                <span asp-validation-for="OrdreInformasjon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
